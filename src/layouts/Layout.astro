---
import "../styles/global.css";
import Header from "../components/header.astro";
import HeaderItem from "../components/headerItem.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="canonical" href="https://caitlyn.moe" />
		<meta name="robots" content="index, follow" />
		<meta content="/assets/caitlyn.png" name="twitter:image" /><meta
			content="caitlyn's site"
			name="twitter:title"
		/><meta content="loser" name="twitter:description" />
		<title>caitlyn's site</title>
		<link rel="icon" href="/assets/favicon.png" />
		<ClientRouter />
	</head>

	<body>
		<div id="header-box">
			<div>
				<Header>
					<HeaderItem title="Home" href="/" />
					<HeaderItem title="About" href="/about" />
					<HeaderItem title="Contact" href="/contact" />
				</Header>
				<slot name="below-header" />
			</div>
			<slot name="beside-header" />
		</div>
		<slot />
	</body><style>
		#header-box {
			display: flex;
			flex-direction: row;
			justify-content: space-between;
		}
	</style>
</html>
