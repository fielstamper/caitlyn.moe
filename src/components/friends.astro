<div id="friends">
	<slot />
</div>
<style>
	#friends {
		display: flex;
		gap: 0.7em;
		justify-content: flex-start;
		flex: 1;
	}

	@media (max-width: 768px) {
		#friends {
			flex-wrap: wrap;
		}
	}
</style>

<script>
	const friends = document.getElementById("friends")!;
	const first = friends.firstElementChild!;

	for (let i = friends.children.length; i > 1; i--) {
		friends.appendChild(friends.children[(Math.random() * (i - 0)) | 0]);
	}

	friends.insertBefore(first, friends.firstChild);
</script>
