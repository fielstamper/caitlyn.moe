    }

    @media (max-width: 768px) {
        #top-track {
            justify-content: center;
        }
    }

    #top-track img {
        width: 7.813rem;
        height: var(--height);
        border-radius: 8px;
        box-shadow: var(--shadow-low);
        object-fit: cover;
    }

    .topTrackAnchor {
        font-size: 20px;
        width: 50%;
    }

    @media (max-width: 768px) {
        .topTrackAnchor {
            font-size: 18px;
        }
    }
</style>
