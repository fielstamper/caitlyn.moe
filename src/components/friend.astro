---
const { href, pfp, title } = Astro.props;
import { Image } from "astro:assets";
---

<a href={href}>
	<Image
		src={pfp}
		title={title}
		alt="Friend"
		inferSize={true}
		widths={[240, 540, 720, pfp.width]}
		sizes={`(max-width: 360px) 240px, (max-width: 720px) 44px, (max-width: 1600px) 44px, ${pfp.width}px`}
	/>
</a>
<style>
	img {
		height: 50px;
		width: 50px;
		border-radius: 8px;
		transition: all 0.25s cubic-bezier(0.17, 0.85, 0.29, 0.95);
		box-shadow: 1px 1px 4px #ffffff00;
	}

	img:hover {
		background-color: rgba(12, 12, 12, 0.336);
		box-shadow: 1px 1px 10px 5px var(--friend-highlight);
	}
</style>
