---
const { href, pfp, title } = Astro.props;
import Image from "astro/components/Image.astro";
---

<a href={href}>
    <Image
        src={pfp}
        title={title}
        alt="Friend"
        inferSize={true}
        widths={[240, 540, 720, pfp.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 44px, (max-width: 1600px) 44px, ${pfp.width}px`}
    />
</a>
<style>
    img {
        height: 50px;
        width: 50px;
        border-radius: 8px;
        transition: all 0.2s
            linear(
                0,
                0.0014 0.52%,
                0.0066 1.14%,
                0.0248 2.27%,
                0.0553 3.51%,
                0.1016 4.96%,
                0.1988 7.44%,
                0.4395 12.92%,
                0.5468 15.5%,
                0.6508 18.29%,
                0.7369 20.98%,
                0.8114,
                0.8711 26.56%,
                0.8967 28.01%,
                0.9204,
                0.9406,
                0.9576 32.66%,
                0.982 35.55%,
                0.9998 38.76%,
                1.0112 42.37%,
                1.0167 46.51%,
                1.0165 52.61%,
                1.0062 67.18%,
                1.0021 76.07%,
                0.9997 99.94%
            );
        box-shadow: 1px 1px 4px #ffffff00;
    }

    img:hover {
        background-color: rgba(12, 12, 12, 0.336);
        box-shadow: 1px 1px 10px 5px rgba(255, 255, 255, 0.514);
    }
</style>
